@page "/settings"
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<PageTitle>Settings</PageTitle>

<style>
    /* Layout Container */
    .settings-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    /* Banner */
    .settings-banner {
        background: linear-gradient(to right, #007acc, #61dafb);
        color: white;
        padding: 30px;
        border-radius: 10px;
        text-align: center;
    }

    /* Card-Based Settings */
    .settings-card {
        background: #ffffff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .setting-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    select, input[type="number"] {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Toggle Switch */
    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        border-radius: 24px;
        transition: 0.4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            border-radius: 50%;
            transition: 0.4s;
        }

    input:checked + .slider {
        background-color: #007acc;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }
</style>

<div class="settings-container">
    <!-- Header -->
    <div class="settings-banner">
        <h1>Settings</h1>
        <p>Customize your C-Spark IDE experience.</p>
    </div>

    <!-- General Settings -->
    <div class="settings-card">
        <h2>General Settings</h2>

        <div class="setting-item">
            <label for="theme">Theme:</label>
            <select id="theme" @bind="theme">
                <option value="light">Light Mode</option>
                <option value="dark">Dark Mode</option>
            </select>
        </div>

        <div class="setting-item">
            <label for="fontSize">Font Size:</label>
            <input type="number" id="fontSize" min="10" max="24" step="1" @bind="fontSize" />
        </div>

        <div class="setting-item">
            <label for="editor">Editor Preference:</label>
            <select id="editor" @bind="editorPreference">
                <option value="monaco">Monaco Editor</option>
                <option value="ace">Ace Editor</option>
            </select>
        </div>
    </div>

    <!-- Feature Toggles -->
    <div class="settings-card">
        <h2>Features</h2>

        <div class="setting-item">
            <label>Enable Gamification</label>
            <label class="toggle-switch">
                <input type="checkbox" @bind="enableGamification" />
                <span class="slider"></span>
            </label>
        </div>

        <div class="setting-item">
            <label>Enable Hints</label>
            <label class="toggle-switch">
                <input type="checkbox" @bind="enableHints" />
                <span class="slider"></span>
            </label>
        </div>
    </div>

    <!-- Execution Settings -->
    <div class="settings-card">
        <h2>Execution Settings</h2>
        <div class="setting-item">
            <label for="executionMode">Execution Mode:</label>
            <select id="executionMode" @bind="executionMode">
                <option value="local">Local Execution</option>
                <option value="cloud">Cloud Execution</option>
            </select>
        </div>
    </div>
</div>

@code {
    private string theme = "light";
    private int fontSize = 14;
    private string editorPreference = "monaco";
    private bool enableGamification = true;
    private bool enableHints = true;
    private string executionMode = "local";
}
