@page "/about"
@using CSparkIDE.Shared.Services
@inject IFormFactor FormFactor

<PageTitle>About C-Spark IDE</PageTitle>

<div class="about-container">
    <h1>Welcome to C-Spark IDE</h1>
    <p>
        The <strong>C-Spark IDE</strong> is a modern, student-friendly Integrated Development Environment (IDE)
        designed to make learning programming easy, interactive, and engaging.
    </p>

    <div class="feature-section">
        <h2> Key Features</h2>
        <ul>
            <li> Cross-Platform Support** - Windows, macOS, Linux, and Web</li>
            <li> Customizable UI** - Dark/Light mode, resizable panels</li>
            <li> Syntax Highlighting & Autocomplete** - Powered by Monaco/Ace Editor</li>
            <li> Real-Time Debugging & Execution** - Integrated step-through debugging</li>
            <li> Gamification & Achievements** - Track progress and unlock rewards</li>
            <li> GitHub Integration** - Version control for projects</li>
        </ul>
    </div>

    <div class="about-footer">
        <p>
            C-Spark IDE is built using <strong>.NET MAUI + Blazor</strong>, with a powerful execution engine
            that supports C-Spark and will soon expand to Python and JavaScript.
        </p>
        <p>
            Learn more about .NET MAUI at
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">Microsoft Docs</a>.
        </p>
    </div>
</div>

@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}
